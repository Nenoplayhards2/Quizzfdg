<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <TextView
        android:id="@+id/pergunta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/autour_one"
        android:text="Em que ano eu nasci ??"
        android:textColor="#0073FF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.15" />

    <TextView
        android:id="@+id/perguna2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/autour_one"
        android:text="Primeira Pergunda:"
        android:textColor="#0073FF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.05" />

    <Button
        android:id="@+id/bt_pergunta1"
        android:layout_width="266dp"
        android:layout_height="37dp"
        android:background="#00FFFFFF"
        android:fontFamily="@font/carter_one"
        android:text="a)2005"
        android:textColor="@color/purple_500"
        tools:layout_editor_absoluteX="72dp"
        tools:layout_editor_absoluteY="172dp" />

    <Button
        android:id="@+id/bt_pergunta4"
        android:layout_width="266dp"
        android:layout_height="37dp"
        android:background="#00FFFFFF"
        android:fontFamily="@font/carter_one"
        android:text="d)2005"
        android:textColor="@color/purple_500"
        tools:layout_editor_absoluteX="72dp"
        tools:layout_editor_absoluteY="357dp" />

    <Button
        android:id="@+id/bt_pergunt2"
        android:layout_width="266dp"
        android:layout_height="37dp"
        android:background="#00FFFFFF"
        android:fontFamily="@font/carter_one"
        android:text="c)2005"
        android:textColor="@color/purple_500"
        tools:layout_editor_absoluteX="72dp"
        tools:layout_editor_absoluteY="296dp" />

    <Button
        android:id="@+id/bt_pergunta3"
        android:layout_width="266dp"
        android:layout_height="37dp"
        android:background="#00FFFFFF"
        android:fontFamily="@font/carter_one"
        android:text="b)2005"
        android:textColor="@color/purple_500"
